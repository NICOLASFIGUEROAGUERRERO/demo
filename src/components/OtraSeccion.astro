---
import { work } from "../cv.json";
---

{
  work.map(
  ({ name, startDate, endDate, position, summary, highlights }) => {
    const starYear = new Date(startDate).getFullYear();
    const endYear =
      endDate !== null ? new Date(endDate).getFullYear() : "";
    const years = `${starYear} - ${endYear}`;

    return (
      <ul>
        <article>
          <header>
            <div>
              <h3>{name}</h3>
              <h4>{position}</h4>
            </div>
            <time datetime="">{years}</time>
          </header>
          <footer>
            <p>{summary}</p>
          </footer>
        </article>
      </ul>
    );
  }
)
}
