---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import LogoSvg from "../icons/logonf.svg";
import { Image } from 'astro:assets';
import profilePic from "../assets/FotoNFG.jpg";
---

<header id="container" class="bg-gradient-to-r from-pink-600 to-purple-700 text-white py-12 px-6">
  <div id="hero" class="flex flex-col md:flex-row items-center gap-8 max-w-5xl mx-auto">
    
    <!-- Foto de perfil -->
    <div class="flex-shrink-0">
      <img 
src={profilePic.src} 
  alt="Foto de perfil" 
  class="w-48 h-48 rounded-full border-4 border-white shadow-lg object-cover" 
      />
    </div>

    <!-- Información personal -->
    <div class="text-center md:text-left">
      <h1 class="text-4xl font-bold mb-2">Nicolás Figueroa Guerrero</h1>
      <h2 class="text-xl font-light mb-4">Estudiante Ingenieria</h2>
      <p class="max-w-xl text-lg">
        Apasionado por el desarrollo web moderno, la innovación tecnológica y la creación de aplicaciones escalables.
      </p>
    </div>
  </div>
</header>

<style>
  #container {
    font-family: Inter, Roboto, 'Helvetica Neue', Arial, sans-serif;
  }
</style>
