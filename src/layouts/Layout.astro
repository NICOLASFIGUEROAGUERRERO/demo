---
import Fuegol from "@/components/Fuegol.astro"
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import "../styles/global.css";
import { basics } from "@/cv.json";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { image, summary } = basics;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro 5.0</title>
  </head>
  <body> 
    <Fuegol />
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
 :root {
    color-scheme: light dark;
  } 

  @font-face {
    font-family: "Inter";
    font-style: normal;
    font-weight: 100 1000;
    font-display: swap;
    src: url("/font/tesla.woff2") format("woff2");
  }


  @font-face {
    font-family: "Jolly";
    font-style: italic;
    font-weight: 100 1000;
    font-display: swap;
    src: url("/font/JollyLodger.woff2") format("woff2");
  }


  html {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: Jolly, system-ui, sans-serif;
    background: #ddd;
  }
</style>

